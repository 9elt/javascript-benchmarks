source ./src/benchmark/main

if [[ "$1" = "all" ]]
then
    ALL_BENCHMARKS=(benchmarks/*)
else
    ALL_BENCHMARKS=("${@}")
fi

for BENCHMARK in "${ALL_BENCHMARKS[@]}"
do

    if [[ "$1" = "all" ]]
    then
        BENCHMARK_NAME=$( echo "$BENCHMARK" | sed "s/benchmarks//g" )
    else
        BENCHMARK_NAME="$BENCHMARK"
    fi

    run "$BENCHMARK_NAME"

done
