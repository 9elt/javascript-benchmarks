#         exit 1
#     fi
# }

load_config_or_exit() {
    if [[ ! -f "$1/config" ]]
    then
        echo "missing config in $1" 
        exit 1
    else
        echo "$1/config"
    fi
}

available_code_or_exit() {
    if [[ ! -f "$1/available-code/simple.js" ]] ||
    [[ ! -f "$1/available-code/realistic.js" ]] || 
    [[ ! -f "$1/available-code/edge-case.js" ]]
    then
        echo "missing config in $1" 
        exit 1
    fi
}

load_available() {
    cat "$1/available-code/$2.js"
}

space() {
    echo "$1" | tr "-" "$2"
}

parse_filename() {
    CHAR=" "

    if [[ "$2" ]]
    then
        CHAR="$2"
    fi

    echo "$1" | sed -r "s/.+\/(.+)\..+/\1/"  | tr "-" "$CHAR"
}

parse_dirname() {
    echo $(basename "$1")
}

# colors

cyan() {
    echo -ne "\x1b[1;36m${@}\x1b[0m"
}

yellow() {
    echo -ne "\x1b[1;33m${@}\x1b[0m"
}

bold() {
    echo -ne "\x1b[1m${@}\x1b[0m"
}

# progress indicator

show_progress() {
    echo -ne "> $( yellow "$1" ) -> run $( yellow "$2" ) / $3    \\r"
}

clear_line() {
    echo -ne "                                                   \\r"
}

clear_progress() {
    echo -ne "$( bold "$1" ) -> $( cyan "OK" )                   \\r"
    echo ""
}
